<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%-5p] %m (%F:%L) \n" />
		</layout>
	</appender>
	
	<!-- DailyRollingFileAppender -->
	<!-- 매일 하나의 로그 파일 발생 -->
	<appender name="rolling" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="C:/AS/logs/"/>
		<param name="encoding" value="utf-8" />
		<param name="DatePattern" value="'-'yyyy-MM-dd'.log'" /><!-- 매일 자정에 날짜가 붙은 로그파일 생성 -->
		<!-- <param name="DatePattern" value="'-'yyyy-MM-dd-HH-mm'.log'" /> -->
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{MM-dd HH:mm:ss} [%-5p] [%C{5}:%L] %m %n" />
		</layout>
	</appender>
	
	
	<!-- Application log level 설정 -->
	<logger name="kr.or.kosta">
		<level value="debug" />
	</logger>
	
	<!-- 3rdparty log level 설정 -->
	<logger name="org.springframework.core">
		<level value="warn" />
	</logger>
	
	<logger name="org.springframework.beans">
		<level value="warn" />
	</logger>
	
	<logger name="org.springframework.context">
		<level value="warn" />
	</logger>

	<logger name="org.springframework.web">
		<level value="warn" />
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="warn" />
		<appender-ref ref="console" />
		<appender-ref ref="rolling" />
	</root>
</log4j:configuration>
